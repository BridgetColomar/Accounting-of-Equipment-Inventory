<Window x:Class="AccountingOfEquipmentInventoryManagementApp.Views.Windows.AdministratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно администратора" Height="600" Width="800">
    <Grid>
        <TabControl>
            <!-- Вкладка "Оборудование" -->
            <TabItem Header="Оборудование">
                <Grid Margin="10">
                    <DataGrid x:Name="EquipmentDataGrid"
                              ItemsSource="{Binding Equipments}"
                              AutoGenerateColumns="False"
                              Margin="0,0,0,50">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Серийный номер" Binding="{Binding SerialNumber}" Width="150"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Местоположение" Binding="{Binding Location}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,10">
                        <Button Content="Добавить оборудование" Width="150" Margin="5"
                                Click="BtnAddEquipment_Click"/>
                        <Button Content="Редактировать" Width="120" Margin="5"
                                Click="BtnEditEquipment_Click"/>
                        <Button Content="Удалить оборудование" Width="150" Margin="5"
                                Click="BtnDeleteEquipment_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка "Инвентаризация" -->
            <TabItem Header="Инвентаризация">
                <Grid Margin="10">
                    <DataGrid x:Name="InventoryGrid"
                              ItemsSource="{Binding InventoryRecords}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Оборудование" Binding="{Binding Equipment.Name}" Width="150"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding RecordDate}" Width="150"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding RecordedStatus}" Width="100"/>
                            <DataGridTextColumn Header="Примечание" Binding="{Binding Note}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка "Сотрудники" -->
            <TabItem Header="Сотрудники">
                <Grid Margin="10">
                    <DataGrid x:Name="EmployeeGrid"
                              ItemsSource="{Binding Employees}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="150"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Username}" Width="150"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding AccessRole}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
