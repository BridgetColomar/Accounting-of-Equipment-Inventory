<Window x:Class="AccountingOfEquipmentInventoryManagementApp.Views.Windows.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно менеджера" Height="600" Width="900">
    <Grid Margin="10">
        <TabControl>
            <!-- Вкладка сотрудников -->
            <TabItem Header="Сотрудники">
                <Grid Margin="10">
                    <DataGrid x:Name="dgEmployees" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,50">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Username}" Width="100"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding AccessRole}" Width="100"/>
                            <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="80"/>
                            <DataGridTextColumn Header="Последняя авторизация" 
                                                 Binding="{Binding LastLoginTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                                 Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Обновить список" 
                            HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                            Margin="10" Width="150" Click="BtnRefreshEmployees_Click"/>
                </Grid>
            </TabItem>

            <!-- Вкладка отчетов -->
            <TabItem Header="Отчёты">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Отчёт по сотрудникам:" 
                                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Сгенерировать отчёт" Width="200" Click="BtnGenerateReport_Click"/>
                        <TextBox x:Name="txtReport" Margin="0,10,0,0" AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto" Height="200"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>