<Window x:Class="AccountingOfEquipmentInventoryManagementApp.Views.Windows.OperatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно оператора" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Выберите оборудование:" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="CmbEquipment" ItemsSource="{Binding Equipments}" 
                DisplayMemberPath="Name" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Выберите новый статус:" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="CmbStatus" Height="25" Margin="0,0,0,10">
                <!-- Используем Tag для передачи значения перечисления EquipmentStatus -->
                <ComboBoxItem Content="Активный" Tag="Active"/>
                <ComboBoxItem Content="На обслуживании" Tag="InMaintenance"/>
                <ComboBoxItem Content="Выведено из эксплуатации" Tag="Decommissioned"/>
                <ComboBoxItem Content="Неизвестно" Tag="Unknown"/>
            </ComboBox>

            <TextBlock Text="Примечание:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtNote" Height="60" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <Button Content="Сохранить инвентаризацию" Width="200" Height="30" HorizontalAlignment="Center"
              Click="BtnRecordInventory_Click"/>
        </StackPanel>
    </Grid>
</Window>