<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🌿 Темные пастельные цвета -->
    <Color x:Key="PrimaryColor">#FF95A49C</Color>
    <!-- Тёмный серо-зелёный -->
    <Color x:Key="AccentColor">#FF6FA785</Color>
    <!-- Зелёный акцент -->
    <Color x:Key="LightColor">#FFEFEFEF</Color>
    <!-- Светло-серый фон -->
    <Color x:Key="DarkColor">#FF4A5A5A</Color>
    <!-- Графит -->
    <Color x:Key="ErrorColor">#FFD68C8C</Color>
    <!-- Тёплый пастельный красный -->

    <!-- 🎨 Кисти -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#4CAF50"/>
    <!-- Тёмно-зелёный -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#388E3C"/>
    <SolidColorBrush x:Key="LightBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="DarkBrush" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="TextBrush" Color="#2E2E2E" />
    <SolidColorBrush x:Key="AccentBrush" Color="#81C784"/>
</ResourceDictionary>